<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_splash"
        android:layout_width="40dp"
        android:scaleType="centerCrop"
        android:layout_height="30dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/loadingtwo"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="20dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_rose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_rose"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-400dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagesplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/compat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="BILIMDON"
        android:fontFamily="@font/opensanssemibold"
        android:textColor="@color/splashtext"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/opensansregular"
        android:textColor="@color/splashtext"
        android:text="Turli fanlardan savollar"
        app:layout_constraintTop_toBottomOf="@+id/compat_text_view"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:src="@drawable/splash_tworose"
        app:layout_constraintBottom_toBottomOf="@+id/compat_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/compat_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>